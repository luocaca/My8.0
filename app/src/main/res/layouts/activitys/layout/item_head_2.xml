    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fjzs"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/text_color333"
            android:paddingLeft="10dp"
            android:text="风景指数：" />

        <com.hedgehog.ratingbar.RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            app:clickable="true"
            app:halfstart="true"
            app:starCount="5"
            app:starEmpty="@mipmap/star_empty"
            app:starFill="@mipmap/star_full"
            app:starHalf="@mipmap/star_half"
            app:starImageHeight="24dp"
            app:starImagePadding="20dp"
            app:starImageWidth="40dp" />
    </LinearLayout>


    <com.allen.library.SuperTextView
        android:id="@+id/leader_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:sCenterBottomTextColor="@color/colorAccent"
        app:sCenterTopTextString=" "
        app:sCenterViewGravity="left_center"
        app:sLeftTextString="活动领队：二傻么么哒"
        app:sLeftViewGravity="left_center" />


    <com.allen.library.SuperTextView
        android:id="@+id/userJoin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:sCenterBottomTextColor="@color/colorAccent"
        app:sCenterTopTextString=" "
        app:sCenterViewGravity="left_center"
        app:sLeftTextString="报名列表：1/45"
        app:sLeftViewGravity="left_center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="6dp">

        <TextView
            android:id="@+id/hdyh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动优惠"
            android:textColor="@color/tip_color"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/zeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hdyh"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:background="@color/tip_color"
            android:padding="2dp"
            android:text="赠"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hdyh"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/zeng"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zeng_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名可获100积分没人" />

            <TextView
                android:id="@+id/zeng_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信分享可获1000积分，达成交易还可获2000积分/人，上不封顶" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>